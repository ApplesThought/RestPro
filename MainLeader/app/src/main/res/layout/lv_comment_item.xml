<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="5dp">
        <com.example.view.customview.CircleTextImageView
            android:id="@+id/comment_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/health_guide_men_selected"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/comment_photo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/comment_men"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="标题"
                    android:textColor="@color/orange_big"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/comment_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="楼主"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#15C108"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="日期"
                android:gravity="center_vertical"
                android:textColor="@color/orange"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/deleteTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:visibility="gone"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/contentTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论"/>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grey"/>-->
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fra"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/side_nav_bar_friend">

        <com.example.view.customview.CircleTextImageView
            android:id="@+id/img_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/health_guide_men_selected" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.0001dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF9000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/talkTxt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="说说"
            style="@style/Common_Text"
            android:textColor="@color/white"
            android:gravity="center"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/checkInTxt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="签到"
            style="@style/Common_Text"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/writeTxt"
            style="@style/Common_Text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?selectableItemBackground"
            android:text="说点什么吧..." />
    </LinearLayout>

</LinearLayout>
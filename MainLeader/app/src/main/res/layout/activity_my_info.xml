<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.activity.MyInfoActivity">

    <FrameLayout
        android:id="@+id/fra_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/infobg">
        <!--返回-->
        <TextView
            android:id="@+id/backText"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:drawableLeft="@mipmap/back"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <com.example.customview.CircleTextImageView
                android:id="@+id/img_info_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/health_guide_men_selected"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/txt_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <!--<ImageView
                    android:id="@+id/maleOrfemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/list_male"/>-->
            </LinearLayout>

            <TextView
                android:id="@+id/txt_info_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/info_main"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="主页"/>
        <TextView
            android:id="@+id/info_talk"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="说说"
            android:gravity="center"/>
        <TextView
            android:id="@+id/info_article"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="文章"
            android:gravity="center"/>
        <TextView
            android:id="@+id/info_laugh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="段子"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mainPage"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent"/>
</LinearLayout>
